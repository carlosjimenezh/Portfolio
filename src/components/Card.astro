---
import '../styles/card.css'
interface Props {
	title: string;
	body: string;
	href: string;
	requirements: Array<string>;
	imgSrc: string;
}

const { href, title, body, requirements, imgSrc } = Astro.props;
---

<a href={href} target="_blank" class="link-card">
	<div class="box">
		<div class="img-background" style={`background-image: url(${imgSrc})`}></div>
		<h3 class="text-center">
			{title}
		</h3>
		<strong>
			Responsibilities
		</strong>
		<ul>
			{requirements.map((item) => (
				<li>{item}</li>
				))}
		</ul>
	</div>
</a>

